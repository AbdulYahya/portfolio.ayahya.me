{
  "input": "src/assets/images",
  "output": "dist/assets/images",
  "watch": false,
  "gui": false,
  "filters": [
    {
      "glob": [
        "**/*.jpg",
        "**/*.jpeg"
      ],
      "use": [
        {
          "name": "lepto-resize",
          "maxWidth": 1200
        },
        {
          "name": "lepto-webp",
          "quality": 70
        },
        {
          "name": "lepto.jpeg",
          "quality": 70
        }
      ]
    },
    {
      "glob": "**/*.png",
      "use": [
        {
          "name": "lepto-resize",
          "retina": [
            2
          ]
        },
        {
          "name": "lepto.png",
          "quality": "70-80"
        }
      ]
    }
  ]
}